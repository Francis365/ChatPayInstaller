<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatPayInstaller.MainPage">

    <StackLayout>
         <!--Place new controls here--> 
        <Label x:Name="CurrentVersionCodeLabel"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <Label x:Name="CurrentVersionNameLabel"
           HorizontalOptions="Center" Text="Welcome to Xamarin Forms"
           VerticalOptions="CenterAndExpand" />
        <Button x:Name="AskForPermissionBtn" Text="Ask for permission (Android needed)" IsVisible="false" Clicked="AskForPermissionBtn_Clicked"/>
          <Button x:Name="downloadBtn" Text="Install ChatPay" BackgroundColor="Black"  TextColor="White"  IsVisible="true" Clicked="downloadBtn_Clicked"/>
         <Button x:Name="EnableKeyBoardBtn" BackgroundColor="Black" TextColor="White" Text="Enable Keyboard"  Clicked="EnableKeyBoardBtn_Clicked"/>
        <Button x:Name="ForceUpdateBtn" BackgroundColor="Black" TextColor="White" Text="Change Keyboard"  Clicked="ForceUpdateBtn_Clicked"/>
         <Button x:Name="uninstallBtn" BackgroundColor="Red" TextColor="White" Text="Uninstall App"  Clicked="uninstallBtn_Clicked"/>
         <Button x:Name="LaunchBtn" BackgroundColor="Black"  Text="First time Launch" Clicked="LaunchBtn_Clicked"/>
    </StackLayout>

</ContentPage>
